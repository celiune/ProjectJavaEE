<?xml version="1.0" encoding="UTF-8"?>
<Context >
    <Resource
            name = 'jdbc/projetjavaee'
            auth = 'Container' type = 'javax.sql.DataSource'
            driverClassName="com.mysql.cj.jdbc.Driver"
            maxTotal="20" maxIdle="5" maxWaitMillis="10000"
            username="root" password="root"
            url="jdbc:mysql://localhost:3306/projetjavaee?useSSL=false"/>

    <Realm className="org.apache.catalina.realm.DataSourceRealm"
           DataSourceName="jdbc/projetjavaee" localDataSource="true" userTable="users"
           userRoleTable="roles" userNameCol="username" userCredCol="password"
           roleNameCol="role"/>
</Context>